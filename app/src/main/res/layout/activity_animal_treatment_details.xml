<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/app_bg"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Homepage.AnimalTreatmentDetails">

    <TextView
        android:id="@+id/txtviewAnimalNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="120dp"
        android:text="Animal Number / ID"
        android:textColor="@color/Black"
        android:textSize="20sp" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recTreatmentDetails"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/txtviewAnimalNumber"
        android:layout_marginTop="15dp"
        android:padding="10dp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/recTreatmentDetails"
        android:layout_centerInParent="true"
        android:orientation="horizontal"
        android:padding="5dp">

        <Button
            android:id="@+id/trackPedoData"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="5dp"
            android:padding="2dp"
            android:text="Add Treatment"
            android:textSize="15sp" />

    </LinearLayout>


</RelativeLayout>